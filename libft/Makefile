NAME = libft.a

INCLUDES = includes/

FLAGS = -Werror -Wextra -Wall

all: $(NAME)

$(NAME):
	gcc $(FLAGS) -I $(INCLUDES) -c *.c
	ar -rcs $(NAME) *.o

clean:
	rm -f *.o

fclean: clean
	rm -f $(NAME)

re: fclean all
